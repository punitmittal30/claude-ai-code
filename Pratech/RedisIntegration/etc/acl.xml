<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Magento_Backend::tools">
                        <resource id="Magento_Backend::cache">
                            <resource id="Magento_Backend::redis_cache_management" title="Redis Cache Management"
                                      translate="title" sortOrder="40">
                                <resource id="Magento_Backend::flush_post_import" title="Flush Post Import"
                                          translate="title" sortOrder="5"/>
                                <resource id="Magento_Backend::flush_attribute_mapping" title="Attribute Mapping Cache"
                                          translate="title" sortOrder="10"/>
                                <resource id="Magento_Backend::flush_reviews" title="Reviews Cache" translate="title"
                                          sortOrder="20"/>
                                <resource id="Magento_Backend::flush_catalog" title="Catalog Cache" translate="title"
                                          sortOrder="30"/>
                                <resource id="Magento_Backend::flush_system_config" title="System Config Cache"
                                          translate="title" sortOrder="40"/>
                                <resource id="Magento_Backend::customer_widget" title="Customer Widget Cache"
                                          translate="title" sortOrder="50"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
