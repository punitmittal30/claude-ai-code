<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <columns name="sales_order_columns">
        <column name="rzp_order_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Razorpay Order ID</label>
            </settings>
        </column>
        <column name="rzp_payment_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Razorpay Payment ID</label>
            </settings>
        </column>
        <column name="estimated_delivery_date">
            <settings>
                <filter>text</filter>
                <label translate="true">Estimated Delivery Date</label>
            </settings>
        </column>
        <column name="is_confirmed">
            <settings>
                <filter>text</filter>
                <label translate="true">Is Confirmed</label>
            </settings>
        </column>
        <column name="delivery_charges" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Delivery Charges</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="base_delivery_charges" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Base Delivery Charges</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="delivery_charges_refunded" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Delivery Charges Refunded</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="ip_address">
            <settings>
                <filter>text</filter>
                <label translate="true">IP Address</label>
            </settings>
        </column>
        <column name="platform" class="Pratech\Order\Ui\Component\Listing\Column\Platform">
            <settings>
                <filter>text</filter>
                <label translate="true">Platform</label>
            </settings>
        </column>
        <column name="utm_id">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM ID</label>
            </settings>
        </column>
        <column name="utm_source">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM Source</label>
            </settings>
        </column>
        <column name="utm_campaign">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM Campaign</label>
            </settings>
        </column>
        <column name="utm_medium">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM Medium</label>
            </settings>
        </column>
        <column name="utm_term">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM Term</label>
            </settings>
        </column>
        <column name="utm_content">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM Content</label>
            </settings>
        </column>
        <column name="tracker_cookie">
            <settings>
                <filter>text</filter>
                <label translate="true">Tracker Cookie</label>
            </settings>
        </column>
        <column name="utm_timestamp">
            <settings>
                <filter>text</filter>
                <label translate="true">UTM Timestamp</label>
            </settings>
        </column>
    </columns>
</listing>
