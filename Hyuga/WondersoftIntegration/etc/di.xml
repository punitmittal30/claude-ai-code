<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Hyuga\WondersoftIntegration\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">wondersoft_integration</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Hyuga\WondersoftIntegration\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Hyuga\WondersoftIntegration\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="wondersoft_sync_product" xsi:type="object">
                    Hyuga\WondersoftIntegration\Console\Command\SyncProductCommand
                </item>
            </argument>
        </arguments>
    </type>
</config>
